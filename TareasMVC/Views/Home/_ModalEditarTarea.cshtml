<div class="modal fade" id="modal-editar-tarea" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-editar-tarea-titulo" data-bind="text: titulo"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-9">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="txtTituloCrearTarea"
                                   placeholder="titulo"
                                   autocomplete="off"
                                   data-bind="value: titulo, event: {change: manejarCambioEditarTarea}" />
                            <label for="txtTituloCrearTarea">Titulo de la tarea</label>
                        </div>
                        <div class="mb-3">
                            <label>Descripcion</label>
                            <textarea class="form-control" rows="4"
                                      data-bind="value: descripcion, event: {change: manejarCambioEditarTarea}">
                            </textarea>
                        </div>
                        <div class="mb-3">
                            <partial name="_Pasos"></partial>
                        </div>
                        <div class="mb-3">
                            <partial name="_ArchivosAdjuntos" />
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <button class="btn btn-danger mb-2 w-100 text-start" data-bind="{click: intentarBorrarTarea}">
                            <i class="bi bi-xlg"></i>
                            Borrar tarea
                        </button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" data-bind="{click: manejarCambioEditarTarea}">Guardar cambios</button>
            </div>
        </div>
    </div>
</div>